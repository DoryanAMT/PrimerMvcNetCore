@model List<int>

<h2 style="color:blue">
    Conjetura Collatz
</h2>

<form method="post">
    <label>Número Collatz</label>
    <input type="text" name="numero"
        class="form-control" /> <br />
    <button class="btn btn-info">
        Mostrar conjetura
    </button>
</form>

@if(Model != null){
    <ul>
        @foreach (int num in Model)
        {
            <li>@num</li>
        }
    </ul>
}